extends pug/layout

block variables
  -let title = "Контакты";

block content

  main
    +title-image-bg-about
    // Contact Section Start
    .contact-section.section.pt-100.pt-lg-80.pt-md-70.pt-sm-60.pt-xs-50.pb-100.pb-lg-80.pb-md-70.pb-sm-60.pb-xs-50
      .container
        .row
          .col-lg-4
            .emergncy-contact-two
              .single-emergncy-contact.icon-black.content-black.mb-30
                .pentagon-icon.contact-icon
                  .icon
                    i.fa.fa-phone
                .content
                  p
                    a( href="tel:177597377" ) 1-775-97-377
                  span Наш телефон
              .single-emergncy-contact.icon-black.content-black.mb-30
                .pentagon-icon.contact-icon
                  .icon
                    i.fa.fa-home
                .content
                  p 14 Tottenham Court Road
                  span London, England.
              .single-emergncy-contact.icon-black.content-black.mb-30
                .pentagon-icon.contact-icon
                  .icon
                    i.fa.fa-envelope-o
                .content
                  p
                    a( href="mailto:info@thememove.com" ) info@thememove.com
                  span Электронная почта
              .single-emergncy-contact.icon-black.content-black.mb-30
                .pentagon-icon.contact-icon
                  .icon
                    i.fa.fa-clock-o
                .content
                  p с 9:00 до 18:00
                  span Часы работы
          .col-lg-8
            .row.mb-30
              .col-12
                include components/yandex-map/yandex-map
            .row
              .col-12
                .contact-form-wrap._form
                  form(action='https://jsonplaceholder.typicode.com/users')
                    .row
                      .col-md-12
                        .contact-form-style.mb-20
                          label.visually-hidden(for="contact-form-name") Ваше имя
                          input(name='name', id='contact-form-name' placeholder='Ваше имя', title="Введите ваше имя", type='text')
                          span.error-msg
                          .contact-form-error Заполните это поле
                      .col-md-12
                        .contact-form-style.mb-20
                          label.visually-hidden(for="contact-form-email") Электронная почта
                          input(name='email', id='contact-form-email', placeholder='Электронная почта*', title="Введите ваш email", type='email' required data-msg="Пожалуйста, проверьте ваш e-mail")
                          span.error-msg
                      .col-md-12
                        .contact-form-style
                          label.visually-hidden(for="contact-form-message") Сообщение
                          textarea(name='message', id='contact-form-message', placeholder='Type your message here..',  title="Введите сообщение")
                          span.error-msg
                      .col-md-12
                        .contact-form-style.contact-form-consent.dark
                          input.visually-hidden(type="checkbox" required id="contact-form-consent" name="consent" checked)
                          label(for="contact-form-consent") Я даю согласия на обработку
                          a(href="privacy-policy.html", target="_blank") персональных данных
                          span.error-msg
                        .contact-form-style
                          button.btn(type="submit")
                            span Send message
    // Contact Section End

